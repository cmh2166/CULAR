{
    "id": "http://tbd/schema.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "object",
    "patternProperties": {
        "^.*$": {
            "$ref": "#/definitions/collection"
        }
    },
    "maxProperties": 1,
    "definitions": {
        "collection": {
            "type": "object",
            "properties": {
                "phys_coll_id": { "type": "string" },
                "steward": {
                    "type": "string",
                    "pattern": "^[a-zA-Z]{1,4}[0-9]{1,6}$" },
                "items": {
                    "$ref": "#/definitions/item"
                }
            },
            "required": [ "steward", "items" ]
        },
        "item": {
            "patternProperties": {
                "^.*$": {
                    "$ref": "#/definitions/directory"
                }
            }
        },
        "directory": {
            "patternProperties": {
                "^.*$": {
                    "$ref": "#/definitions/file"
                }
            }
        },
        "file": {
            "type": "object",
            "properties": {
                "bibid": { "type": "string" },
                "md5": { "type": "string" },
                "sha1": { "type": "string" },
                "size": { "type": "integer" }
            },
        },
    }
}
